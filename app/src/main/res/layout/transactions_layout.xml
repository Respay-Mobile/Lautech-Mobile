<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/news_card_click"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/transactionPicturecardView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="250dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/transactionPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@color/plain"
                android:src="@drawable/ic_person_icon" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/transactionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAUTECH"
            android:textColor="@color/transactionNameColor"
            android:textAppearance="@style/CourseName"
            android:translationY="-0.24sp"/>

        <ImageView
            android:id="@+id/transactionStateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_red_arrow_icon"
            />

        <TextView
            android:id="@+id/transactionSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="School Fees"
            android:layout_marginStart="20dp"
            android:textColor="@color/transactionSubtitle"
            android:textAppearance="@style/seeAllText"
            android:translationY="-0.24sp"/>


        <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="- â‚¦10,000,00"
            android:textAppearance="@style/CourseName"
            android:textColor="@color/transactionNameColor"
            android:translationY="-0.24sp" />

        <TextView
            android:id="@+id/transactionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="09:39 AM"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/transactionSubtitle"
            android:textAppearance="@style/CourseDesc"
            android:translationY="-0.24sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@drawable/tab_line"/>

    </RelativeLayout>


</RelativeLayout>