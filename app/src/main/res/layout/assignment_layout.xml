<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="CHM 201"
            android:lineSpacingExtra="-1sp"
            android:gravity="top"
            android:textAppearance="@style/DashboardItemDesc"
            android:textColor="@color/onbTitle"/>

        <TextView
            android:id="@+id/assignmentState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="40dp"
            android:gravity="top"
            android:text="Pending"
            android:lineSpacingExtra="-1sp"
            android:textAppearance="@style/unitText"
            android:textColor="@color/unitCOlor" />

        <TextView
            android:id="@+id/courseAssignmentDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.44sp"
            android:gravity="top"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisci elit. Dictumst laoreet faucibus eu, faucibus odio porta. Eu vitae, bibendum pulvinar orci pellen sit. Sit facilisi sem mauris amet, enim urna viverra so. Sit consectetur fermentum pretium vitae duis nisi eget nec. "
            android:textAppearance="@style/seeAllText"
            android:textColor="@color/discoverDescColor"/>

        <ImageView
            android:id="@+id/uploadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:background="@drawable/ic_upload_icon"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/icon_click"
            android:clickable="true"
            android:layout_marginEnd="40dp"/>


</RelativeLayout>