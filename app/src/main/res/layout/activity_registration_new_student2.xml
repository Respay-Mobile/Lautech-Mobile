<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users.Registration.RegistrationNewStudentActivity2">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/loginTop">

        <TextView
            android:id="@+id/createAcctTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:lineSpacingExtra="-1sp"
            android:text="@string/createAccount"
            android:textAppearance="@style/loginTitle" />

        <TextView
            android:id="@+id/createAcctDesc"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="63dp"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="@string/loginWithDataRegistration"
            android:textAppearance="@style/loginDesc"
            android:textColor="@color/loginDesc"
            android:translationY="-1.96sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp">

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="6sp"
            android:text="@string/phoneNumText"
            android:textAppearance="@style/loginDesc"
            android:textColor="@color/loginTextView"
            android:translationY="-2.92sp"

            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneOutlinedTextField"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            app:startIconContentDescription="PhoneIcon"
            app:startIconDrawable="@drawable/ic_phone_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phoneNumTextHelper"
                android:inputType="phone"
                android:maxLength="11"
                />

        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp">

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="6sp"
            android:text="@string/genderTextview"
            android:textAppearance="@style/loginDesc"
            android:textColor="@color/loginTextView"
            android:translationY="-2.92sp"

            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/genderOutlinedTextField"
            style="@style/TextInputDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            app:startIconContentDescription="PersonIcon"
            app:startIconDrawable="@drawable/ic_person_icon">

            <AutoCompleteTextView
                android:id="@+id/genderDropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/genderHelper"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="381dp">

        <TextView
            android:id="@+id/stateOfOriginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="6sp"
            android:text="@string/stateOfOr"
            android:textAppearance="@style/loginDesc"
            android:textColor="@color/loginTextView"
            android:translationY="-2.92sp"

            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/stateOfOriginOutlinedTextField"
            style="@style/TextInputDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            app:startIconContentDescription="StateIcon"
            app:startIconDrawable="@drawable/ic_state_of_origin_icon">

            <AutoCompleteTextView
                android:id="@+id/stateOfOriginDropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/stateOfOr"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        style="@style/onbBtn"
        android:layout_width="335dp"
        android:layout_height="67dp"
        android:text="@string/continueBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="504dp"/>


    <TextView
        android:id="@+id/haveAcctSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="6sp"
        android:text="@string/haveAcct"
        android:textAppearance="@style/loginDesc"
        android:textColor="@color/frame_view"
        android:translationY="-2.92sp"
        />


</RelativeLayout>
