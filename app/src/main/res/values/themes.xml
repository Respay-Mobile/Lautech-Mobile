<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LautechMobileApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/loginDesc</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/OTPTitle</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>


    <style name="ShapeAppearance.Lautech.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="onbTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/onbTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onbDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="android:textColor">@color/onbDesc</item>
    </style>

    <style name="onbLoginBtnText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="onbBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/onbLoginBtnText</item>
        <item name="android:backgroundTint">@color/onbBtn</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Lautech.SmallComponent</item>
    </style>

    <!--Style for Login Activity -->
    <style name="loginTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/loginTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/loginTextHelperColor</item>
        <item name="android:textColorHint">@color/loginTextHelperColor</item>
        <item name="startIconTint">@color/loginTextHelperColor</item>
        <item name="endIconTint">@color/loginTextHelperColor</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/loginDesc</item>
        <item name="errorIconTint">@color/loginDesc</item>
        <item name="boxStrokeErrorColor">@color/loginDesc</item>
        <item name="android:textColor">@color/loginDesc</item>
    </style>

    <style name="TextInputDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/loginTextHelperColor</item>
        <item name="android:textColorHint">@color/loginTextHelperColor</item>
        <item name="startIconTint">@color/loginTextHelperColor</item>
        <item name="endIconTint">@color/loginTextHelperColor</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/loginDesc</item>
        <item name="errorIconTint">@color/loginDesc</item>
        <item name="boxStrokeErrorColor">@color/loginDesc</item>
        <item name="android:textColor">@color/loginDesc</item>
    </style>

    <!-- OTP style -->
    <!--Style for Login Activity -->
    <style name="OTPTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OTPDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="OTPPhone">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <!-- Dashboard style -->
    <style name="DashboardDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="searchText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="DashboardItemDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearance.Lautech.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Dashboard style -->
    <style name="NewsDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="seeAllText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="unitText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="CourseCardShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="CourseDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <!-- Course Activity -->
    <style name="CourseTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Course Detail Activity -->
    <style name="CourseName">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Overview fragment design -->
    <style name="TabText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="LecturerName">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- News Activity -->
    <style name="NewsCardShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="NewsTabText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="newsExtras">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <!-- news details activity -->
    <style name="newsDetailsTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Wallet activity -->
    <style name="walletTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="walletCardShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Personal info activity -->
    <style name="changePictureButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/CourseCardShapeAppearance</item>
        <item name="textAppearanceButton">@style/NewsTabText</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/frame_view</item>
        <item name="android:textColor">@color/frame_view</item>
    </style>

</resources>