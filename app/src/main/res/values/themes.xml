<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LautechMobileApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/loginDesc</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>


    <style name="ShapeAppearance.Escrow.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="onbTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/onbTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onbDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="android:textColor">@color/onbDesc</item>
    </style>

    <style name="onbLoginBtnText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="onbBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/onbLoginBtnText</item>
        <item name="android:backgroundTint">@color/onbBtn</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Escrow.SmallComponent</item>
    </style>

    <!--Style for Login Activity -->
    <style name="loginTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/loginTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/loginTextHelperColor</item>
        <item name="android:textColorHint">@color/loginTextHelperColor</item>
        <item name="startIconTint">@color/loginTextHelperColor</item>
        <item name="endIconTint">@color/loginTextHelperColor</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/loginDesc</item>
        <item name="errorIconTint">@color/loginDesc</item>
        <item name="boxStrokeErrorColor">@color/loginDesc</item>
        <item name="android:textColor">@color/loginDesc</item>
    </style>

    <style name="TextInputDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/loginTextHelperColor</item>
        <item name="android:textColorHint">@color/loginTextHelperColor</item>
        <item name="startIconTint">@color/loginTextHelperColor</item>
        <item name="endIconTint">@color/loginTextHelperColor</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextColor">@color/loginDesc</item>
        <item name="errorIconTint">@color/loginDesc</item>
        <item name="boxStrokeErrorColor">@color/loginDesc</item>
        <item name="android:textColor">@color/loginDesc</item>
    </style>




</resources>